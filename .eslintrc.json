{
    "env": {
        "browser": true,
        "es2021": true,
		  "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "class-methods-use-this": "off",
      "no-param-reassign": "off",
      "no-plusplus": "off",
      "no-cond-assign": "off",
      "no-underscore-dangle": "off",
      "no-unused-expressions": ["error", { "allowTernary": true }],
		"no-restricted-syntax":[
			"error",
			"LabeledStatement",
			"WithStatement"
	  ]
    }
}
